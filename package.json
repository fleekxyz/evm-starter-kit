{
  "name": "eth-boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "hardhat:generate-abi": "hardhat deploy --export frontend/src/contracts/contracts.json",
    "hardhat:clean": "rm -fr ./artifacts ./cache ./typechain-types",
    "hardhat:deploy": "hardhat deploy --network localhost --export frontend/src/contracts/contracts.json",
    "hardhat:node": "hardhat node",
    "frontend:dev": "cd ./frontend && pnpm run dev",
    "frontend:clean": "cd ./frontend && pnpm run clean",
    "frontend:build": "cd ./frontend && pnpm i && pnpm build",
    "clean": "concurrently 'pnpm:frontend:clean' 'pnpm:hardhat:clean'",
    "dev": "pnpm run hardhat:generate-abi && concurrently 'pnpm:hardhat:node' 'wait-on http://localhost:8545 && pnpm run hardhat:deploy' 'pnpm:frontend:dev'",
    "test": "hardhat test"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@ethersproject/abi": "^5.4.7",
    "@ethersproject/bytes": "^5.0.0",
    "@ethersproject/providers": "^5.4.7",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^2.0.0",
    "@nomiclabs/hardhat-ethers": "^2.0.0",
    "@nomiclabs/hardhat-etherscan": "^3.0.0",
    "@openzeppelin/contracts": "^4.8.1",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.2",
    "@types/chai": "^4.2.0",
    "@types/mocha": ">=9.1.0",
    "@types/node": ">=12.0.0",
    "chai": "^4.2.0",
    "chai-ethers": "^0.0.1",
    "concurrently": "^7.6.0",
    "ethers": "^5.7.2",
    "hardhat": "^2.12.7",
    "hardhat-deploy": "^0.11.23",
    "hardhat-deploy-ethers": "0.3.0-beta.13",
    "hardhat-gas-reporter": "^1.0.8",
    "solidity-coverage": "^0.8.0",
    "ts-node": ">=8.0.0",
    "typechain": "^8.1.0",
    "typescript": ">=4.5.0",
    "wait-on": "^7.0.1"
  }
}
